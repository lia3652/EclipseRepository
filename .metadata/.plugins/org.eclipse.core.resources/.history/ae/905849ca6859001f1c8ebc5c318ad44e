package ust.com.arraylist;

import java.util.ArrayList;

public class ArrayListMaxMin {
	
	public void  printList(ArrayList<Integer> arrlist)
	{
		System.out.println("Printi");
        for(int listElement: arrlist){
            System.out.println(listElement);
        }
	}
	
	public void  getMaxList(ArrayList<Integer> arrlist)
	{
		int maxvalue=0;
		System.out.println("Maximum Value in Array: ");
		System.out.println("------------------------");
		 int listSize = arrlist.size();
		for(int k=1;k<listSize;k++)
		{
			maxvalue=arrlist.get(0);
			if(arrlist.get(k)>maxvalue)
				maxvalue=arrlist.get(k);
		}
		
		System.out.println(maxvalue+" ");
	}
	
	
	public void  getMinList(ArrayList<Integer> arrlist)
	{
		 int size = arrlist.size();
		int minvalue=0;
		System.out.println("Minimum Value in Array: ");
		System.out.println("------------------------");
		for(int m=1;m<size;m++)
		{
			minvalue=arrlist.get(0);
			if(arrlist.get(m)<minvalue)
				minvalue=arrlist.get(m);
		}
		
		System.out.println(minvalue+" ");
	}
	
	
	public static void main(String[] args)
	{
		
		System.out.println("Enter elements of ArrayList");
		  ArrayList<Integer> arrlist = new ArrayList<>();
		  arrlist.add(10);
		  arrlist.add(22);
		  arrlist.add(340);
		  arrlist.add(44);
	        arrlist.add(5);
	        arrlist.add(75);
	        printList(arrlist);
	        getMaxList();
	        getMinList();
	        
	}

}
